<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/dark">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_tasky_logo"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"/>

        <ImageButton
            android:id="@+id/butmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="8dp"
            android:background="#0000"
            android:src="@drawable/ic_menu" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="14dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/lastday"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/dokmerooz"
                android:text="LastDay"
                android:textSize="14sp"/>
            <Button
                android:id="@+id/today"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/dokmeroozselected"
                android:text="Today"
                android:textSize="14sp"
                android:layout_marginLeft="14dp"/>
            <Button
                android:id="@+id/nextday"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/dokmerooz"
                android:text="NextDay"
                android:textSize="14sp"
                android:layout_marginLeft="14dp"/>
        </LinearLayout>
            <FrameLayout
                android:id="@+id/fragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="18dp">

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradientback"
            android:padding="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="salam"
                android:textSize="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="khobi"
                android:textSize="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="chekhabar?"
                android:textSize="30dp"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>